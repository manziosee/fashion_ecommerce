<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_fashion_product_tree" model="ir.ui.view">
        <field name="name">fashion.product.tree</field>
        <field name="model">product.template</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="brand"/>
                <field name="target_audience"/>
                <field name="clothing_size"/>
                <field name="color"/>
                <field name="list_price"/>
                <field name="qty_available"/>
            </tree>
        </field>
    </record>

    <record id="view_fashion_product_form" model="ir.ui.view">
        <field name="name">fashion.product.form</field>
        <field name="model">product.template</field>
        <field name="arch" type="xml">
            <form string="Product">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="brand"/>
                            <field name="target_audience"/>
                            <field name="list_price"/>
                        </group>
                        <group string="Fashion Details">
                            <field name="target_audience"/>
                            <field name="brand"/>
                            <field name="season"/>
                            <field name="clothing_size"/>
                            <field name="color"/>
                            <field name="material"/>
                        </group>
                        <group string="Inventory Management">
                            <field name="min_stock_level"/>
                            <field name="max_stock_level"/>
                            <field name="stock_status" readonly="1"/>
                            <button name="action_replenish_stock" string="Replenish Stock" 
                                    type="object" class="btn-primary"
                                    invisible="stock_status != 'low_stock'"/>
                        </group>
                    </group>
                    <group string="B2B Pricing">
                        <group>
                            <field name="b2b_price"/>
                            <field name="b2b_min_qty"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Product Images">
                            <group>
                                <field name="image_1920" widget="image" class="oe_avatar"/>
                                <field name="image_1024" widget="image" readonly="1"/>
                                <field name="image_512" widget="image" readonly="1"/>
                                <field name="image_256" widget="image" readonly="1"/>
                                <field name="image_128" widget="image" readonly="1"/>
                            </group>
                            <group string="Additional Images">
                                <p>You can add multiple product images by creating product variants or using the website product gallery.</p>
                            </group>
                        </page>
                        <page string="Website">
                            <group>
                                <field name="website_published"/>
                                <field name="website_url" readonly="1"/>
                                <field name="website_meta_title"/>
                                <field name="website_meta_description"/>
                                <field name="website_meta_keywords"/>
                            </group>
                        </page>
                    </notebook>
                    <group>
                        <field name="virtual_available"/>
                        <field name="max_stock_level"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_fashion_products" model="ir.actions.act_window">
        <field name="name">Fashion Products</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
